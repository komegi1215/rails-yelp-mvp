<div class="container">
  <div class="row justify-content-center my-5">
    <div class="col-6">

      <h1>New Restaurant</h1>
        <%= simple_form_for [@restaurant] do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :phone_number %>
          <%= f.input :category, collection: Restaurant::CATEGORY%>
          <%= f.submit "Submit", class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>
